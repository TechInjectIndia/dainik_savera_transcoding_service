{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    // "rootDir": "./src", // Removed rootDir as server.ts is in the project root
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
    // "sourceMap": true, // Optional: uncomment for easier debugging
  },
  // Include only the server.ts file (adjust if you have other .ts files)
  "include": ["server.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "uploads"
  ]
}
